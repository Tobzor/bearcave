{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@components": [
        "bearcave/components"
      ],
      "@utils": [
        "bearcave/utils"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@types": [
        "bearcave/types"
      ],
      "@css/*": [
        "bearcave/components/core/styles/*"
      ]
    }
  },
  "include": [
    "src",
    "src/apps/**/*"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}